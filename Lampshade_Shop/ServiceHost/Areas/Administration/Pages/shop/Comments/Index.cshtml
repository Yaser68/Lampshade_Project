@page 
@model ServiceHost.Areas.Administration.Pages.shop.Comments.IndexModel


@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت  نظرات ";
}

<div class="content-page">
    <div class="content">

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در نظرات</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="@Model.SearchModel.Name" ></label>
                        <input class="form-control" asp-for="@Model.SearchModel.Name"  placeholder="نام ">
                    </div>
                     <div class="form-group">
                        <label class="sr-only" asp-for="@Model.SearchModel.Mail" ></label>
                        <input class="form-control" asp-for="@Model.SearchModel.Mail"  placeholder="ایمیل">
                    </div>
                    
                    <button asp-page-handler="" type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            
          
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست نظرات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>نام محصول</th>
                                    <th>نام</th>
                                    <th> ایمیل</th> 
                                    <th>نظر</th>
                                     <th>تاریخ ایجاد</th>
                                    <th>وضعیت</th>
                                   
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model.Comments)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>
                                        <td>@item.Message</td>
                                         <td>@item.CommentDate</td>
                                        <td class="text-center">
                                            
                                            @if(!item.IsCanceled && item.IsConfirmed)
                                            {
                                                <span class="text-success">تایید شده</span>
                                                
                                            }
                                            @if(!item.IsCanceled && !item.IsConfirmed)
                                            {
                                                 <span class="text-warning">در انتظار تایید</span>
                                            }
                                            @if (item.IsCanceled && !item.IsConfirmed)
                                            {
                                                    <span class="text-warning">لغو شده</span>     
                                            }

                                        </td>

                                       
                                        <td>
                                            @if(!item.IsCanceled && !item.IsConfirmed)
                                            {
                                                 <a asp-page="./Index" asp-page-handler="Confirm" asp-route-id="@item.Id"
                                                 class="btn btn-success waves-effect waves-light m-b-5">تایید نظر</a>
                                                  <a asp-page="./Index" asp-page-handler="Cancel" asp-route-id="@item.Id"
                                                 class="btn btn-danger waves-effect waves-light m-b-5">رد نظر </a>
                                            }
                                               @if(item.IsCanceled && !item.IsConfirmed)
                                            {
                                                <a asp-page="./Index" asp-page-handler="Confirm" asp-route-id="@item.Id"
                                                 class="btn btn-success waves-effect waves-light m-b-5">تایید نظر</a>
                                            }
                                            @if(!item.IsCanceled && item.IsConfirmed)
                                            {
                                                 <a asp-page="./Index" asp-page-handler="Cancel" asp-route-id="@item.Id"
                                                 class="btn btn-danger waves-effect waves-light m-b-5">رد نظر </a>
                                            }


                                            
                                       
                                            
                                        
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}