@using global::Inventory.Application.Contract.Inventory

@model List<InventoryOperationViewModel>
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">سابقه گردش انبار</h4>
</div>


    <div class="modal-body">
      <table class="table table-bordered">
        <thead>
            <tr>
                <th>تاریخ</th>
                <th>تعداد</th>
                <th>عملیات</th>
                <th>موجودی پس از عملیات</th>
                <th>ایجادکننده</th>
                <th>توضیحات</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-white @(item.Operation ? "bg-success" : "bg-danger")">
                    <td>@item.OperationDate</td>
                    <td>@item.Count</td>
                    
                    <td>
                        @if (item.Operation)
                        {
                            <span>افزایش</span>
                        }
                        else
                        {
                            <span>کاهش</span>
                        }
                    </td>
                    <td>@item.CurrentCount</td>
                    <td>@item.Operator</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        
    </div>
